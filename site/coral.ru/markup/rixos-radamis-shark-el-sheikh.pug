include ../markup/mixins

- const hotel = hotels.find(hotel => hotel.id === 64951);

body
    script
        != `var known_hotel = ${ JSON.stringify(hotel) };`

    +internal-nav([
        { label: 'Номера', ref: 'section.suites' },
        { label: 'Рестораны и бары', ref: 'section.restaurants-and-bars' },
        { label: 'RixyClub', ref: 'section.rixy-club' },
        { label: 'CoralBonus', ref: 'section.coral-bonus' },
        { label: 'Контакты', ref: 'section.leased-line-premium' },
    ], '/chain/rixos/egypt/', '.interactive-map')

    +kvv({
        h1: 'Rixos Radamis Sharm El Sheikh',
        logo: '/site/coral.ru/assets/logos/rixos-radamis-sharm-el-sheikh.png',
        desktop_poster: '/site/coral.ru/assets/rixos-radamis-sharm-el-sheikh/kv-poster-desktop.jpg',
        mobile_poster:  '/site/coral.ru/assets/rixos-radamis-sharm-el-sheikh/kv-poster-mobile.jpg',
        desktop_vid: 999555635,
        mobile_vid: 999556220,
        video_scale: 1.5,
        five_stars: true,
        location: 'Египет, Шарм-эш-Шейх'
    })

    section.held.intro
        .inhalt
            h2 Добро пожаловать <br>в Rixos Radamis Sharm El Sheikh
            p.generic
                :typo
                    Rixos Radamis Sharm El Sheikh — это самый захватывающий водный рай с прекрасно спроектированными и красочными номерами, где вы найдете широкий спектр возможностей для приятного отдыха всей семьи. Станьте частью идеального отдыха с семейной концепцией, которая включает аквапарк, спортивные кафе, игровые комнаты, детский клуб, эксклюзивные кулинарные изыски и множество исключительных удобств для детей.
            .actions
                button.knopf(data-ref='section.suites') Выбрать номер

    section.held.suites
        .inhalt
            h2.rooms-splitter
            .rooms-list-combo
                .rooms-grid
                .rooms-paging.discrete-pager

