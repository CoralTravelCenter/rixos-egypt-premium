include ../markup/mixins

- const hotel = hotels.find(hotel => hotel.id === 58466);

body
    script
        != `var known_hotel = ${ JSON.stringify(hotel) };`

    +internal-nav([
        { label: 'Номера', ref: 'section.suites' },
        { label: 'Рестораны и бары', ref: 'section.restaurants-and-bars' },
        { label: 'RixyClub', ref: 'section.rixy-club' },
        { label: 'CoralBonus', ref: 'section.coral-bonus' },
        { label: 'Контакты', ref: 'section.leased-line-premium' },
    ], '/chain/rixos/egypt/', '.interactive-map', { label: 'Выбрать номер', ref: 'section.suites' })

    +kvv({
        h1: 'Club Privé by Rixos',
        logo: '/site/coral.ru/assets/logos/club-preve.png',
        desktop_poster: '/site/coral.ru/assets/club-preve-by-rixos/kv-poster-desktop.jpg',
        mobile_poster:  '/site/coral.ru/assets/club-preve-by-rixos/kv-poster-mobile.jpg',
        desktop_vid: 998623688,
        mobile_vid: 998624620,
        video_scale: 1.5,
        five_stars: true,
        location: 'Египет, Шарм-эш-Шейх'
    })

    section.held.intro
        .inhalt
            h2 Добро пожаловать <br>в Club Privé by Rixos
            p.generic
                :typo
                    Club Prive by Rixos Sharm El Sheikh расположен в Шарм-эль-Шейхе, Египет — портовом и курортном городе на южной части Синайского полуострова. Это одно из самых популярных туристических направлений в арабском мире, это новый бутик-продукт мирового бренда Rixos Hotels, известного на протяжении многих лет своим лучшим сервисом. Club Privé by Rixos — это мир, где изысканная роскошь и элитный сервис идут рука об руку, где комфорт сочетается с красотой природы и где ваши желания формируют ваш отдых. Мы будем рады удивить и порадовать наших дорогих гостей, превзойдя ваши ожидания
            .actions
                button.knopf(data-ref='section.suites') Выбрать номер

    section.held.suites
        .inhalt
            h2.rooms-splitter
            .rooms-list-combo
                .rooms-grid
                .rooms-paging.discrete-pager

    +gallery([
       { visual_desktop: '/site/coral.ru/assets/club-preve-by-rixos/gallery/01-desktop.jpg', visual_mobile: '/site/coral.ru/assets/club-preve-by-rixos/gallery/01-mobile.jpg' },
       { visual_desktop: '/site/coral.ru/assets/club-preve-by-rixos/gallery/02-desktop.jpg', visual_mobile: '/site/coral.ru/assets/club-preve-by-rixos/gallery/02-mobile.jpg' },
       { visual_desktop: '/site/coral.ru/assets/club-preve-by-rixos/gallery/03-desktop.jpg', visual_mobile: '/site/coral.ru/assets/club-preve-by-rixos/gallery/03-mobile.jpg' },
       { visual_desktop: '/site/coral.ru/assets/club-preve-by-rixos/gallery/04-desktop.jpg', visual_mobile: '/site/coral.ru/assets/club-preve-by-rixos/gallery/04-mobile.jpg' },
       { visual_desktop: '/site/coral.ru/assets/club-preve-by-rixos/gallery/05-desktop.jpg', visual_mobile: '/site/coral.ru/assets/club-preve-by-rixos/gallery/05-mobile.jpg' },
       { visual_desktop: '/site/coral.ru/assets/club-preve-by-rixos/gallery/06-desktop.jpg', visual_mobile: '/site/coral.ru/assets/club-preve-by-rixos/gallery/06-mobile.jpg' },
       { visual_desktop: '/site/coral.ru/assets/club-preve-by-rixos/gallery/07-desktop.jpg', visual_mobile: '/site/coral.ru/assets/club-preve-by-rixos/gallery/07-mobile.jpg' },
    ])

