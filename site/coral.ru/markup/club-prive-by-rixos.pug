    section.held.edge2edge.rixy-club.visuals-x-slider
        .x-slider
            .x-slide(style='--visual-desktop: url(/site/coral.ru/assets/club-preve-by-rixos/visuals/rixy-club-01-desktop.jpg); --visual-mobile: url(/site/coral.ru/assets/club-preve-by-rixos/visuals/rixy-club-01-mobile.jpg)')
