        { visual_desktop: '/site/coral.ru/assets/rixos-radamis-sharm-el-sheikh/gallery/01-desktop.jpg', visual_mobile: 'site/coral.ru/assets/rixos-radamis-sharm-el-sheikh/gallery/01-mobile.jpg' },
        { visual_desktop: '/site/coral.ru/assets/rixos-radamis-sharm-el-sheikh/gallery/02-desktop.jpg', visual_mobile: 'site/coral.ru/assets/rixos-radamis-sharm-el-sheikh/gallery/02-mobile.jpg' },
        { visual_desktop: '/site/coral.ru/assets/rixos-radamis-sharm-el-sheikh/gallery/03-desktop.jpg', visual_mobile: 'site/coral.ru/assets/rixos-radamis-sharm-el-sheikh/gallery/03-mobile.jpg' },
        { visual_desktop: '/site/coral.ru/assets/rixos-radamis-sharm-el-sheikh/gallery/04-desktop.jpg', visual_mobile: 'site/coral.ru/assets/rixos-radamis-sharm-el-sheikh/gallery/04-mobile.jpg' },
        { visual_desktop: '/site/coral.ru/assets/rixos-radamis-sharm-el-sheikh/gallery/05-desktop.jpg', visual_mobile: 'site/coral.ru/assets/rixos-radamis-sharm-el-sheikh/gallery/05-mobile.jpg' },
        { visual_desktop: '/site/coral.ru/assets/rixos-radamis-sharm-el-sheikh/gallery/06-desktop.jpg', visual_mobile: 'site/coral.ru/assets/rixos-radamis-sharm-el-sheikh/gallery/06-mobile.jpg' },
        { visual_desktop: '/site/coral.ru/assets/rixos-radamis-sharm-el-sheikh/gallery/07-desktop.jpg', visual_mobile: 'site/coral.ru/assets/rixos-radamis-sharm-el-sheikh/gallery/07-mobile.jpg' },
